% layout "default";
% title "Uploads";
<h1>Upload</h1>
<p>Here you can upload files.</p>

% if (my $msg = flash 'msg') {
<p>
	<b>
		%= $msg
	</b>
</p>
% }


%= form_for '/' => (method => 'POST', enctype => 'multipart/form-data') => begin
	<p>
		%= label_for file => 'File:'
		%= file_field 'file', id => 'file'
	</p>
	%= submit_button 'Upload!'
	<input hidden type="text" name="is_browser" value="Yes">
% end
